<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/secondback">

    <com.example.i_for.writtingboard.DrawPenView
        android:id="@+id/draw_pen_view2"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_brush_pen2"
            android:text="Brush Pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_marking_pen2"
            android:text="Marking Pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_clear_canvas2"
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:background="@drawable/buttonstyle"
        android:id="@+id/btn_save_image2"
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="       This Chinese character is ‘jia’. It means home. When you write it, you should pay attention to the following tips: ......"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>